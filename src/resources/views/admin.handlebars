<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Bootstrap User Management Data Table</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <style>
        body {
            color: #566787;
            background: #f5f5f5;
            font-family: 'Varela Round', sans-serif;
            font-size: 13px;
        }

        .table-responsive {
            margin: 30px 0;
        }

        .table-wrapper {
            min-width: 1000px;
            background: #fff;
            padding: 20px 25px;
            border-radius: 3px;
            box-shadow: 0 1px 1px rgba(0, 0, 0, .05);
        }

        .table-title {
            padding-bottom: 15px;
            background: #299be4;
            color: #fff;
            padding: 16px 30px;
            margin: -20px -25px 10px;
            border-radius: 3px 3px 0 0;
        }

        .table-title h2 {
            margin: 5px 0 0;
            font-size: 24px;
        }

        .table-title .btn {
            color: #566787;
            float: right;
            font-size: 13px;
            background: #fff;
            border: none;
            min-width: 50px;
            border-radius: 2px;
            border: none;
            outline: none !important;
            margin-left: 10px;
        }

        .table-title .btn:hover,
        .table-title .btn:focus {
            color: #566787;
            background: #f2f2f2;
        }

        .table-title .btn i {
            float: left;
            font-size: 21px;
            margin-right: 5px;
        }

        .table-title .btn span {
            float: left;
            margin-top: 2px;
        }

        table.table tr th,
        table.table tr td {
            border-color: #e9e9e9;
            padding: 12px 15px;
            vertical-align: middle;
        }

        table.table tr th:first-child {
            width: 60px;
        }

        table.table tr th:last-child {
            width: 100px;
        }

        table.table-striped tbody tr:nth-of-type(odd) {
            background-color: #fcfcfc;
        }

        table.table-striped.table-hover tbody tr:hover {
            background: #f5f5f5;
        }

        table.table th i {
            font-size: 13px;
            margin: 0 5px;
            cursor: pointer;
        }

        table.table td:last-child i {
            opacity: 0.9;
            font-size: 22px;
            margin: 0 5px;
        }

        table.table td a {
            font-weight: bold;
            color: #566787;
            display: inline-block;
            text-decoration: none;
        }

        table.table td a:hover {
            color: #2196F3;
        }

        table.table td a.settings {
            color: #2196F3;
        }

        table.table td a.delete {
            color: #F44336;
        }

         table.table td a.active {
            color: #10c469;
        }

         table.table td a.deactive {
             color: #ff5b5b;
        }

        table.table td i {
            font-size: 19px;
        }

        table.table .avatar {
            border-radius: 50%;
            vertical-align: middle;
            margin-right: 10px;
        }

        .status {
            font-size: 30px;
            margin: 2px 2px 0 0;
            display: inline-block;
            vertical-align: middle;
            line-height: 10px;
        }

        .text-success {
            color: #10c469;
        }

         .text-fail {
            color: #ff5b5b;
        }

        .text-info {
            color: #62c9e8;
        }

        .text-warning {
            color: #FFC107;
        }

        .text-danger {
            color: #ff5b5b;
        }

        .pagination {
            float: right;
            margin: 0 0 5px;
        }

        .pagination li a {
            border: none;
            font-size: 13px;
            min-width: 30px;
            min-height: 30px;
            color: #999;
            margin: 0 2px;
            line-height: 30px;
            border-radius: 2px !important;
            text-align: center;
            padding: 0 6px;
        }

        .pagination li a:hover {
            color: #666;
        }

        .pagination li.active a,
        .pagination li.active a.page-link {
            background: #03A9F4;
        }

        .pagination li.active a:hover {
            background: #0397d6;
        }

        .pagination li.disabled i {
            color: #ccc;
        }

        .pagination li i {
            font-size: 16px;
            padding-top: 6px
        }

        .hint-text {
            float: left;
            margin-top: 10px;
            font-size: 13px;
        }
    </style>
    <script>
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
</head>

<body>
    <div class="container-xl">
        <div class="table-responsive">
            <div class="table-wrapper">
                <div class="table-title">
                    <div class="row">
                        <div class="col-sm-5">
                            <h2>User <b>Management</b></h2>
                        </div>
                        <div class="col-sm-7">
                            <a href="#" class="btn btn-secondary"><i class="material-icons">&#xE147;</i> <span>Add New
                                    User</span></a>
                            <a href="#" class="btn btn-secondary"><i class="material-icons">&#xE24D;</i> <span>Export to
                                    Excel</span></a>
                        </div>
                    </div>
                </div>
                <div id="vehicles-table">
                    <table class="table table-striped table-hover">
                        {{#if vehicles}}
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Date Created</th>
                                <th>Odometer</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each vehicles}}
                            <tr>
                                <td>{{@index}}</td>
                                <td><a href="#"><img src="{{img}}" class="avatar" alt="Avatar" width="40" heigh="40">
                                        {{name}}</a></td>
                                <td>{{last_updated}}</td>
                                <td>{{odometer}}</td>
                                <td>
                                    <span class="status {{statusClass status}}">&bull; </span> <span
                                        class="status-text">{{status}}</span>
                                <td>
                                    <a href="#" class="active" title="Active" data-id="{{_id}}" data-toggle="tooltip"><i
                                            class="material-icons">&#xe86c;</i></a>
                                    <a href="#" class="deactive" title="Deactive" data-id="{{_id}}"
                                        data-toggle="tooltip"><i class="material-icons">&#xE5C9;</i></a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                        {{/if}}
                    </table>
                </div>

                <div id="users-table">
                    <table class="table table-striped table-hover">
                        {{#if users}}
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Member Since</th>
                                <th>Total Guides</th>
                                <th>Point</th>
                                <th>Action</th>

                            </tr>
                        </thead>
                        <tbody>
                            {{#each users}}
                            <tr>
                                <td>{{@index}}</td>
                                <td>
                                    <a href="#">
                                        <img src="{{user_img}}" class="avatar" alt="Avatar" width="40" height="40">
                                        {{user_name}}
                                    </a>
                                </td>
                                <td>{{member_since}}</td>
                                <td>{{total_guides}}</td>
                                <td>{{points}}</td>

                                <td>
                                    <a href="#" class="sendMessage" data-id="{{_id}}" title="Send Message"
                                        data-toggle="tooltip"><i style="color:#789DE5"
                                            class="material-icons">&#xe0b7;</i></a>
                                    <a href="#" class="delete" data-id="{{firebase_userId}}" title="Delete"
                                        data-toggle="tooltip"><i class="material-icons">&#xE5C9;</i></a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                        {{/if}}
                    </table>
                </div>

                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Send Message To User</h5>
                                <button type="button" class="btn-close" data-dismiss="modal" id="close-modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <!-- Your send message form -->
                                <form id="sendMessageForm">

                                    <div class="mb-3">
                                        <label for="messageBody" class="form-label">Message</label>
                                        <textarea id="messageBody" class="form-control" name="message" rows="4"
                                            placeholder="Enter Your Message" required></textarea>
                                    </div>
                                    <div class="mb-3 d-grid">
                                        <button type="submit" class="btn btn-primary">Send Message</button>
                                    </div>
                                </form>
                                <div id="sendMessageSuccessMessage"
                                    class="alert alert-success alert-dismissible fade show" style="display: none">
                                    <strong>Message sent successfully.</strong> <br>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


                <div id="appointments-table">
                    <table class="table table-striped table-hover">
                        {{#if appointments}}
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Shop Name</th>
                                <th>Appointment Date</th>
                                <th>Appointment Time</th>
                                <th>Booking User Name</th>
                                <th>User Comment</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each appointments}}
                            <tr>
                                <td>{{@index}}</td>
                                <td>
                                    <a href="#">
                                        <img src="{{shopId.shop_images.[0]}}" class="avatar" alt="Avatar" width="40"
                                            height="40"> {{shopId.shop_name}}
                                    </a>
                                </td>
                                <td>{{selectedDate}}</td>
                                <td>{{selectedTime}}</td>
                                <td>{{firstName}}</td>
                                <td>{{comment}}</td>
                                <td>
                                    <a href="#" class="settings" title="Confirm (i.e Send Gmail Notification To Shop)"
                                        data-toggle="tooltip"><i class="material-icons">&#xE158;</i></a>
                                    <a href="#" class="delete" title="Deny (i.e Suspend The Appointment)"
                                        data-toggle="tooltip"><i class="material-icons">&#xE5C9;</i></a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                        {{/if}}
                    </table>
                </div>

                <div class="clearfix">
                    <div class="hint-text">Showing <b>5</b> out of <b>25</b> entries</div>
                    <ul class="pagination">
                        <li class="page-item disabled"><a href="#">Previous</a></li>
                        <li class="page-item"><a href="#" class="page-link">1</a></li>
                        <li class="page-item"><a href="#" class="page-link">2</a></li>
                        <li class="page-item active"><a href="#" class="page-link">3</a></li>
                        <li class="page-item"><a href="#" class="page-link">4</a></li>
                        <li class="page-item"><a href="#" class="page-link">5</a></li>
                        <li class="page-item"><a href="#" class="page-link">Next</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</body>

</html>

<script>
    $(document).ready(function () {
        // Use event delegation to handle clicks on dynamically generated elements
        $(document).on('click', '.sendMessage', function (event) {
            event.preventDefault(); // Prevent the default link behavior

            // Retrieve the data-id attribute of the clicked element
            var dataId = $(this).attr('data-id');
            console.log('Data ID:', dataId);

            // Optionally, store the data-id in a hidden input or a variable
            $('#sendMessageForm').data('userId', dataId);

            // Show the modal
            $('#exampleModal').modal('show');
        });

        // Handle form submission
        $('#sendMessageForm').submit(function (event) {
            event.preventDefault(); // Prevent default form submission

            // Get the form values
            var messageBody = $('#messageBody').val();
            var dataId = $(this).data('userId'); // Retrieve the stored data-id

            // For demonstration, log the values to the console
            console.log('Message:', messageBody);
            console.log('SendingUser ID:', dataId);

            // Here, you can add code to send the data to the server using AJAX
            // For example:

            $.ajax({
                type: 'POST',
                url: 'http://localhost:3000/admin/users/messages',  // Replace with your endpoint
                data: {
                    user_id: dataId,  // Include the data-id in the request
                    message: messageBody
                },
                success: function (response) {
                    // Show success message
                    $('#sendMessageSuccessMessage').show();

                    setTimeout(function () {
                        // Hide the modal after 1 second
                        $('#exampleModal').modal('hide');
                    }, 1000); // 1000 is the delay time in milliseconds
                },
                error: function (error) {
                    // Handle error
                    console.error('Error sending message:', error);
                }
            });


            // Optionally, you can show the success message
            $('#sendMessageSuccessMessage').show();

            // Hide the success message when the modal is hidden
            $('#exampleModal').on('hide.bs.modal', function () {
                $('#sendMessageSuccessMessage').hide();
            });
        });
    });

    document.addEventListener('DOMContentLoaded', (event) => {
        const vehiclesTable = document.getElementById('vehicles-table');
        console.log(vehiclesTable);
        if (vehiclesTable) {
            vehiclesTable.querySelectorAll('.deactive').forEach(deactiveButton => {
                deactiveButton.addEventListener('click', function (event) {
                    event.preventDefault();
                    const token = this.getAttribute('data-id');
                    const url = `http://localhost:3000/admin/vehicles/${token}`;
                    console.log("Reached here for deactivation");
                   
                        fetch(url, {
                            method: 'PATCH',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify({ status: 'Deactive' })
                        })
                            .then(response => {
                                if (response.ok) {
                                    response.json().then(result => {
                                        if (result.status === 'Deactive') {
                                            const row = this.closest('tr');
                                            let statusElement = row.querySelector('.status');
                                            statusElement.textContent = '•';
                                            statusElement.className = 'status text-fail';

                                            // Change the text content to "Deactive" within the same row
                                            row.querySelector('.status-text').textContent = 'Deactive';

                                        } else {
                                            console.error('Failed to deactivate the vehicle');
                                        }
                                    });
                                } else {
                                    console.error('Failed to deactivate the vehicle');
                                }
                            })
                            .catch(error => {
                                console.error('Error:', error);
                            });
                    
                });
            });

            vehiclesTable.querySelectorAll('.active').forEach(activeButton => {
                activeButton.addEventListener('click', function (event) {
                    event.preventDefault();
                    const token = this.getAttribute('data-id');
                    const url = `http://localhost:3000/admin/vehicles/${token}`;
                    console.log("Reached here for activation");
                
                        fetch(url, {
                            method: 'PATCH',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify({ status: 'Active' })
                        })
                            .then(response => {
                                if (response.ok) {
                                    response.json().then(result => {
                                        if (result.status === 'Active') {
                                            const row = this.closest('tr');
                                            let statusElement = row.querySelector('.status');
                                            statusElement.textContent = '•';
                                            statusElement.className = 'status text-success';

                                            // Change the text content to "Active" within the same row
                                            row.querySelector('.status-text').textContent = 'Active';

                                        } else {
                                            console.error('Failed to activate the vehicle');
                                        }
                                    });
                                } else {
                                    console.error('Failed to activate the vehicle');
                                }
                            })
                            .catch(error => {
                                console.error('Error:', error);
                            });
                    
                });
            });
        }

        const usersTable = document.getElementById('users-table');
        console.log(usersTable);
        if (usersTable) {
            usersTable.querySelectorAll('.delete').forEach(deleteButton => {
                deleteButton.addEventListener('click', function (event) {
                    event.preventDefault();
                    const token = this.getAttribute('data-id');
                    const url = `http://localhost:3000/admin/users/${token}`;
                    console.log("Reached here for deletion");
                    if (confirm('Are you sure you want to delete this user?')) {
                        fetch(url, {
                            method: 'DELETE',
                        })
                            .then(response => {
                                if (response.ok) {
                                    // Optionally remove the row from the table
                                    this.closest('tr').remove();
                                } else {
                                    console.error('Failed to delete the user');
                                }
                            })
                            .catch(error => {
                                console.error('Error:', error);
                            });
                    }
                });
            });
        }
    });
</script>
